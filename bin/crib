#!/bin/bash
: "${CRIB_ROOT:=$(dirname "$(dirname "$(realpath "$0")")")}"
deno run --no-check --allow-env --allow-read "$CRIB_ROOT/src/cli.ts" "$@" | (
  read -r L
  case "$L" in
    =fzf=)
      read -r Q # query
      fzf  -q "$Q" --exit-0 --tabstop=8 --prompt='CRIB> ' --delimiter='\t' --nth='2..'
      ;;
    '') # cliffy --help option
      echo
      cat
      ;;
    *)
      cat
  esac
)
sts=(${PIPESTATUS[@]})
if (( ${sts[0]} ))
then exit ${sts[0]}
fi
exit ${sts[1]}

